#include "sysUtils.h"
#include "chip.h"
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>

uint8_t flag_entrada=0;
uint8_t dat;
uint8_t * dato = 0;

void GPIO1_IRQHandler(void)
{
	/*limpiar el estado de la interrupciÃ³n*/
	Chip_PININT_ClearIntStatus (LPC_GPIO_PIN_INT , PININTCH (TEC1_IRQ));
	delayMs(300);

}


void UART2_IRQHandler(void)
{
	Chip_UART_IRQRBHandler(LPC_USART2, &rxRing, &txRing);
	dat = serialReadRB(&dato, 1);

	if(dat > 0)
	{
		flag_entrada=1;
	}

}


int main (void)
{
	inicializar_sistema();
	inicializar_leds();
	inicializar_teclado();
	init_interrupciones();
	inicializar_USART();

	uint8_t bytes =0;

	while (1)
	{


		__WFI();
		if(flag_entrada)
		{
			putChrRB((char *)dato);
			flag_entrada = 0;
		}

	}


	return 0;
}

